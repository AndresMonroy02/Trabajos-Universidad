import random

N=int(input("Digite el tama√±o del vector:    "))
numerosn= list()
numerospares = []
numerosimpares = []
for i in range (N):
     numerosn.append (random.randint(0, 100))
     if numerosn[i]%2 == 0:
         numerospares.append (numerosn[i])
     else:
         numerosimpares.append (numerosn[i])
     
print("Los numeros de la lista son: ",numerosn)
print("Los numeros pares son:  ",numerospares)
print("Los numeros impares son:  ",numerosimpares)

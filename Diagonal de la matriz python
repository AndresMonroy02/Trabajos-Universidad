omatriz=int(input("Digite el numero de filas:   "))
matriz=[]
for i in range(omatriz):
    matriz.append([])
    for j in range (omatriz):
        matriz[i].append(int(input("digite el valor del dato que desea ingresar:  ")))
for k in range(omatriz):
   print(matriz[k])
diagonal=0
for l in range(omatriz):
    diagonal+=matriz[l][l]
print(diagonal/omatriz)
